{% extends 'base.html.twig' %}

{% block title %}{{ 'employee'|trans }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5 mb-3">
            <div class="col">
                <h1>{{ 'employee'|trans }} <br> {{ employee.name }}</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">{{ 'index.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_employee_index') }}">{{ 'index.home'|trans }} {{ 'homepage.employees'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active">{{ 'show'|trans }} {{ 'employee'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ employee.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'datatable.name'|trans }}</th>
                        <td>{{ employee.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'datatable.Email'|trans }}</th>
                        <td>{{ employee.email }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn btn-primary">{{ 'edit'|trans }} <i class="bi bi-pencil-square"></i></a>
            </div>
        </div>

        <div class="p-3">
            <h3 class="align-items-center">{{ 'datatable.Courses'|trans }}</h3>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                {% if courses is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                            <tr>
                                <th>{{ 'datatable.Courses'|trans }}</th>
                                <th>{{ 'datatable.trainer'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in courses %}
                                <tr>
                                    <td>{{ course.name }}</td>
                                    <td>
                                        {% if course.trainers is defined %}
                                            {{ course.trainers }}
                                        {% else %}
                                            <span class="text-muted">No {{ 'datatable.trainer'|trans }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted mb-0">{{ 'no.course'|trans }}</p>
                {% endif %}
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="{{ path('app_employee_index') }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> {{ 'back'|trans }}
            </a>
            {{ include('employee/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
