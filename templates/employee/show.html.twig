{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5 mb-3">
            <div class="col">
                <h1>Employee <br> {{ employee.name }}</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_employee_index') }}">Home eployees</a>
                        </li>
                        <li class="breadcrumb-item active">Show employee</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ employee.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ employee.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ employee.email }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn btn-primary">Edit <i class="bi bi-pencil-square"></i></a>
            </div>
        </div>

        <div class="p-3">
            <h3 class="align-items-center">Courses</h3>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                {% if courses is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Course</th>
                                <th>Trainer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in courses %}
                                <tr>
                                    <td>{{ course.name }}</td>
                                    <td>
                                        {% if course.trainers is defined %}
                                            {{ course.trainers }}
                                        {% else %}
                                            <span class="text-muted">Not instructor</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted mb-0">Not enrolled in any course.</p>
                {% endif %}
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="{{ path('app_employee_index') }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
            {{ include('employee/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
