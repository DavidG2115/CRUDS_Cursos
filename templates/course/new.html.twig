{% extends 'base.html.twig' %}

{% block title %}New Course{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5">
            <div class="col">
                <h1>{{ 'create.course'|trans }}</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">{{ 'index.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_course_index') }}">{{ 'index.home'|trans }} {{ 'course'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active">{{ 'new.course'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body ">
                {{ include('course/_form.html.twig') }}

                <div class="row">
                    <div class="col align-items-center">
                        <a href="{{ path('app_course_index') }}" class="btn btn-outline-primary"><i class="bi bi-arrow-left"></i> {{ 'cancel'|trans }}</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
