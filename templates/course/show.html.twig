{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5 mb-3">
            <div class="col">
                <h1>Course: {{ course.name }}</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_course_index') }}">Home Courses</a>
                        </li>
                        <li class="breadcrumb-item active">Show Course</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body mb-3">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ course.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ course.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ course.description }}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{ course.duration }}</td>
                    </tr>
                    </tbody>
                </table>

                <h3 class="pt-2">Employees</h3>
                {% if course.employees|length > 0 %}
                    <div class="table-responsive mb-3">
                        <table class="table table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for employee in course.employees %}
                                <tr>
                                    <td>{{ employee.name }}</td>
                                    <td>{{ employee.email }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">This course has no employees assigned.</p>
                {% endif %}

                <h3 class="pt-2">Trainers</h3>
                {% if course.trainers|length > 0 %}
                    <div class="table-responsive mb-3">
                        <table class="table table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for trainer in course.trainers %}
                                <tr>
                                    <td>{{ trainer.name }}</td>
                                    <td>{{ trainer.email }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">This course has no trainers assigned.</p>
                {% endif %}

                <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn btn-primary">Edit <i class="bi bi-pencil-square"></i></a>

            </div>
        </div>



        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="{{ path('app_course_index') }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
            {{ include('course/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}
