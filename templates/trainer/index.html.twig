{% extends 'base.html.twig' %}

{% block title %}{{ 'index.home'|trans }} {{ 'homepage.trainers'|trans }}{% endblock %}

{% block body %}

    <div class="container">

        <div class="row mt-5 mb-3">
            <div class="col d-flex align-items-center">
                <h1>{{ 'datatable.trainer'|trans }}</h1>
                <a href="{{ path('app_trainer_new') }}" class="btn btn-primary ms-auto">{{ 'create.trainer'|trans }}
                    <i class="bi bi-plus-circle m-1"></i>
                </a>
            </div>
        </div>
        <div class="">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}">{{ 'index.home'|trans }}</a>
                    </li>
                    <li class="breadcrumb-item active">{{ 'datatable.trainer'|trans }}</li>
                </ol>
            </nav>
        </div>


        <div class="card shadow">
            <div class="table-responsive card-body">
                <table id="trainersTable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>{{ 'datatable.name'|trans }}</th>
                        <th>{{ 'datatable.Email'|trans }}</th>
                        <th>{{ 'datatable.Courses'|trans }}</th>
                        <th>{{ 'datatable.Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
