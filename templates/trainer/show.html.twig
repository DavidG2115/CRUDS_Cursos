{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.trainers'|trans }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5 mb-3">
            <div class="col">
                <h1>{{ 'homepage.trainers'|trans }}: {{ trainer.name }}</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">{{ 'index.home'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_trainer_index') }}">{{ 'homepage.trainers'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active">{{ 'show'|trans }} {{ 'datatable.trainer'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body mb-3">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ trainer.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'datatable.name'|trans }}</th>
                        <td>{{ trainer.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'datatable.Email'|trans }}</th>
                        <td>{{ trainer.email }}</td>
                    </tr>
                    </tbody>
                </table>

                <h2>{{ 'datatable.Courses'|trans }}</h2>
                {% if trainer.courses|length > 0 %}
                    <div class="table-responsive mb-3">
                        <table class="table table-striped align-middle">
                            <thead>
                            <tr>
                                <th>{{ 'datatable.name'|trans }}</th>
                                <th>{{ 'datatable.Description'|trans }}</th>
                                <th>{{ 'datatable.Duration'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in trainer.courses %}
                                <tr>
                                    <td>{{ course.name }}</td>
                                    <td>{{ course.description }}</td>
                                    <td>{{ course.duration }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">This instructor has no courses assigned.</p>
                {% endif %}
                <a href="{{ path('app_trainer_edit', {'id': trainer .id}) }}" class="btn btn btn-primary">{{ 'edit'|trans }} <i class="bi bi-pencil-square"></i></a>

            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="{{ path('app_trainer_index') }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> {{ 'cancel'|trans }}
            </a>
            {{ include('trainer/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
