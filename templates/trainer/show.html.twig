{% extends 'base.html.twig' %}

{% block title %}Trainer{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-5 mb-3">
            <div class="col">
                <h1>Trainer: {{ trainer.name }}</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_trainer_index') }}">Trainers</a>
                        </li>
                        <li class="breadcrumb-item active">Show Trainer</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body mb-3">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ trainer.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ trainer.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ trainer.email }}</td>
                    </tr>
                    </tbody>
                </table>

                <h2>Courses</h2>
                {% if trainer.courses|length > 0 %}
                    <div class="table-responsive mb-3">
                        <table class="table table-striped align-middle">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Duration</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in trainer.courses %}
                                <tr>
                                    <td>{{ course.name }}</td>
                                    <td>{{ course.description }}</td>
                                    <td>{{ course.duration }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">This instructor has no courses assigned.</p>
                {% endif %}
                <a href="{{ path('app_trainer_edit', {'id': trainer .id}) }}" class="btn btn btn-primary">Edit <i class="bi bi-pencil-square"></i></a>

            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="{{ path('app_trainer_index') }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
            {{ include('trainer/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
